<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Menu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
    <link rel="stylesheet" href="@(Url.Content("~/css/menuProduto.css"))">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"></script>

    <!-- Script personalizado (corrigido para ambiente ASP.NET, se aplicável) -->
    <script src="@(Url.Content("~/js/produtoML.js"))"></script>
</head>
<body>
    <div class="container mt-5">
        <h1 class="display-4 text-center">@ViewBag.NomeAplicacao</h1>
        <br />
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div class="camposPesquisa">
                <input id="txtPesquisaProduto" placeholder="Pesquisar produto" />
                <button id="btnPesquisarProduto" type="button" class="btn btn-primary">Pesquisar Produto</button>
            </div>
            <form>
                <div class="botoes">
                    <button id="btnCadastrarProduto" type="button" class="btn btn-primary">Cadastrar Produto</button>
                    <label class="switch">
                        <input id="switchProdutoTeste" type="checkbox">
                        <span class="slider round"></span>
                    </label>
                    <label>Produto Teste</label>
                </div>
            </form>
        </div>
        <table id="tblProdutosML" class="table table-bordered table-striped mt-4">
            <thead class="table-dark">
                <tr>
                    <th>Id Produto</th>
                    <th>Nome</th>
                    <th>Quantidade Disponível</th>
                    <th>Preço</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</body>
</html>
